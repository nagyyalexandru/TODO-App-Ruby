<%= turbo_frame_tag dom_id(todo_list) do %>
  <%= form_with(model: todo_list) do |form| %>
    <% if todo_list.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo list from being saved:</h2>
        <ul>
          <% todo_list.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.submit "Save" %>
    </div>
  <% end %>
<% end %>
