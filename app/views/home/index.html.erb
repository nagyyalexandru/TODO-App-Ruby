<div class="home-index">
  <% if flash[:notice] %>
    <div class="flash-message notice">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>

  <% if current_user %>
    <div class="welcome-message">
      <p>Hello, <strong><%= current_user.email %></strong>! Nice to see you back.</p>
      <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-primary" %>
    </div>

    <div id="todo_lists">
      <%= render current_user.accessible_todo_lists %>
    </div>

    <div id="new_todo_list">
      <%= render "todo_lists/form", todo_list: TodoList.new %>
    </div>
  <% else %>
    <div class="welcome-message">
      <h1>Welcome!</h1>
      <p>New here? Signup or login to get started</p>
      <%= link_to "Signup", new_user_path, class: "btn btn-secondary" %> |
      <%= link_to "Login", new_session_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>